<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %> 
    <title>Editar producto</title>
</head>

<body>
    <div class="ofertasfixed">
        <i class="fas fa-fire">OFERTAS del día!</i>
    </div>
    <div class="cartel-contenedor">
        <div class="cartelfixed">
            <p>Con tu compra superior a $7500, tenés envío gratis</p>
        </div>
    </div>
    <%- include('./partials/header.ejs') %> 
    
       
        <section class="main-form">
            <h2 style="margin: 20px;">Editando producto "<%= producto.name %>"  </h2>
            
            <form action="/productos/editar/<%= producto.id %>?_method=put" method="POST" enctype="multipart/form-data" class="register">
            <div class="formbox">
                <div class="primeralinea">
                    <input type="text" name="name" value="<%= producto.name %>" required>
                </div>
                <div class="segundalinea">
                    <input type="text" name="description"  value="<%= producto.description %>" required>
                </div>
                <div class="terceralinea">
                    <input type="file" name="productImage"  value="<%= producto.filename %>" required >
                </div>
                <div class="cuartalinea">
                    <input type="text" name="category_id"  value="<%= producto.category_id %>" required>
                </div>
                <div class="quintalinea">
                    <input type="text" name="price"  value="<%= producto.price %>" required>
                </div>
            </div>
            <div class="caja-botones">
               <button  type="submit" class="boton-submit">Actualizar</button>
            </form>
            <form action="/productos/borrar/<%= producto.id %>?_method=delete" method="POST" class="register">
                <button  type="submit" class="boton-submit">Borrar</button>
                       </form> </div>
    </section>






        
</section>
</body>
<%- include('./partials/footer.ejs') %> 
</html>